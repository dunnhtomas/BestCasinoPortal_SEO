{
  "name": "bestcasinoportal/backend",
  "description": "Best Casino Portal Backend API - PHP 8.1+ with modern architecture",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "psr/http-message": "^2.0",
    "psr/log": "^3.0",
    "psr/simple-cache": "^3.0",
    "guzzlehttp/psr7": "^2.6",
    "symfony/http-foundation": "^6.3",
    "vlucas/phpdotenv": "^5.5",
    "monolog/monolog": "^3.4",
    "predis/predis": "^2.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.3",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "BestCasinoPortal\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BestCasinoPortal\\Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse",
    "cs-check": "phpcs src/ --standard=PSR12",
    "cs-fix": "phpcbf src/ --standard=PSR12"
  }
}